<persistence xmlns="http://java.sun.com/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
             version="2.0">

    <persistence-unit name="jpa-app-model-test" transaction-type="RESOURCE_LOCAL">

        <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>


        <properties>
            <property name="javax.persistence.jdbc.driver" value="com.mysql.jdbc.Driver" />
            <property name="javax.persistence.jdbc.url" value="jdbc:mysql://localhost/jpaapp" />
            <property name="javax.persistence.jdbc.user" value="jpaapp" />
            <property name="javax.persistence.jdbc.password" value="jpaapp" />

            <property name="hibernate.show_sql" value="true" />
            <!--<property name="hibernate.hbm2ddl.auto" value="create-drop" />-->
        </properties>

    </persistence-unit>

</persistence>
